<!DOCTYPE html>
<html>
  <head>
    <title>Context</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 class ="app-title"><%= link_to 'Context', root_path %></h1>

    <% flash.each do |type, content| %>
      <%= content_tag :div, content, class: "flash-content flash-content_#{type}" %>
    <% end %>

    <%= yield %>
  </body>
</html>
